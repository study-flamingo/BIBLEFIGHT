# Copy to .env and edit values as needed

# Optional: API.Bible search (requires key)
BIBLE_API_KEY=
BIBLE_API_BIBLE_ID=06125adad2d5898a-01

# Defaults for Bible Fight server
# Translation used for bible-api.com passage fetches (e.g., kjv, web, asv)
DEFAULT_TRANSLATION=kjv

# Number of verses to include as context (Â±N)
BIBLEFIGHT_DEFAULT_CONTEXT_VERSES=7

# Default snippet length for returned passages (characters)
BIBLEFIGHT_DEFAULT_SNIPPET_CHARS=180

# Whether to include snippet fields by default (true/false)
BIBLEFIGHT_INCLUDE_SNIPPETS=true

# Maximum number of candidate references to return
BIBLEFIGHT_DEFAULT_MAX_RESULTS=5

# Whether to include supporting and/or challenging verses by default
BIBLEFIGHT_INCLUDE_SUPPORTING=true
BIBLEFIGHT_INCLUDE_CHALLENGERS=true

